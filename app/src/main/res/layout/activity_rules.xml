<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RulesActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize = "35sp"
                    android:gravity="center_horizontal"
                    android:fontFamily="Arial"
                    android:text="Basketball Rules:" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/basketball"
                    android:scaleType="fitXY"
                    android:id="@+id/iv1" />s

            </LinearLayout>

            <TextView
                android:id="@+id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize = "20sp"
                android:fontFamily="Arial"
                android:text="The main goal of basketball is to throw the ball into the hoop to score points. A basketball team consists of 12 players (Point Guard, Defensive Guard, Center, Offensive forward and Defensive Forward) with only 5 on the court at any time. Substitutions can be made as many times as the team wants." />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/player_positions"
                android:scaleType="fitXY"
                android:id="@+id/iv2" />s

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>